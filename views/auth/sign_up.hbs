<a href="/">Go Back</a>

<h1 class="header-text">Sign Up!</h1>

<form class="form-standard" action="/auth/sign_up" method="POST">
    {{#each auth_errors}}
    <p class="auth-error">{{this}}</p>
    {{/each}}
    <input name="email" type="email" placeholder="Enter your email" required>
    <input name="username" type="username" placeholder="Create a username" required>
    <input name="password" type="password" placeholder="Create a password" required>


    <button>Submit</button>


</form>